{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>jenkinsci/renovate-config"
  ],
  "packageRules": [
    {
      "matchPackageNames": "io.jenkins.plugin-modernizer:plugin-modernizer-pom",
      "enabled": false
    },
    {
      "matchFileNames": ["**/src/test/resources/**"],
      "enabled": false
    },
    {
      "matchPackageNames": ["/jakarta.inject.*/"],
      "enabled": false
    },
    {
      "matchPackageNames": ["/com.fasterxml.jackson.*/"],
      "enabled": false
    },
    {
      "matchPackageNames": ["/org.junit.*/"],
      "enabled": false
    }
  ]
}
